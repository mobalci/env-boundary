{
  "name": "env-boundary",
  "version": "0.1.0",
  "description": "Validate environment variables once and expose an immutable and typed config",
  "author": "Mehmet Ömer Balcı",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
