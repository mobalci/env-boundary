  "homepage": "https://github.com/mobalci/env-boundary",
  "bugs": {
    "url": "https://github.com/mobalci/env-boundary/issues"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
